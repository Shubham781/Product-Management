<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/styles.css">
  <title>Favorites</title>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="/">PMS</a>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="/">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/products/favorites">Favorites</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/products/new">Add Product</a>
        </li>
      </ul>
    </div>
  </nav>
  <div class="container mt-4">
    <h1>Favorite Products</h1>
    <div class="row">
      <% if (favorites.length > 0) { %>
        <% favorites.forEach(product => { %>
          <div class="col-md-4 mb-4">
            <div class="card">
              <img src="<%= product.image %>" class="card-img-top" alt="<%= product.name %>">
              <div class="card-body">
                <h5 class="card-title"><%= product.name %></h5>
                <p class="card-text"><%= product.description %></p>
                <p class="card-text">$<%= product.price %></p>
                <p class="card-text">Rating: <%= product.rating %>/5</p>
                <a href="/products/<%= product._id %>" class="btn btn-primary">View Details</a>
                <form action="/products/<%= product._id %>/unfavorite" method="POST" class="d-inline">
                  <button type="submit" class="btn btn-warning">Remove from Favorites</button>
                </form>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <p class="text-center">No favorite products yet.</p>
      <% } %>
    </div>
  </div>
</body>
</html>
