<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/styles.css">
  <title>Product Management System</title>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="/">PMS</a>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="/">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/products/favorites">Favorites</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/products/new">Add Product</a>
        </li>
      </ul>
      <form class="form-inline ml-auto" action="/" method="GET">
        <input class="form-control mr-sm-2" type="search" placeholder="Search" name="search">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
      </form>
    </div>
  </nav>
  <div class="container mt-4">
    <div class="row">
      <div class="col">
        <h1>Products</h1>
        <div class="form-group">
          <select class="form-control" onchange="location = this.value;">
            <option value="/">All Categories</option>
            <option value="/?category=Electronics">Electronics</option>
            <option value="/?category=Books">Books</option>
            <option value="/?category=Clothing">Clothing</option>
          </select>
        </div>
      </div>
      <div class="col">
        <div class="form-group">
          <select class="form-control" onchange="location = this.value;">
            <option value="/">Sort by</option>
            <option value="/?sort=price">Price</option>
            <option value="/?sort=rating">Rating</option>
          </select>
        </div>
      </div>
    </div>
    <div class="row">
      <% products.forEach(product => { %>
        <div class="col-md-4 mb-4">
          <div class="card">
            <img src="<%= product.image %>" class="card-img-top" alt="<%= product.name %>">
            <div class="card-body">
              <h5 class="card-title"><%= product.name %></h5>
              <p class="card-text"><%= product.description %></p>
              <p class="card-text">$<%= product.price %></p>
              <p class="card-text">Rating: <%= product.rating %>/5</p>
              <a href="/products/<%= product._id %>" class="btn btn-primary">View Details</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>
